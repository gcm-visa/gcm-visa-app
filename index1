  <script>
    // Simple script to handle modal (if needed)
    document.addEventListener('DOMContentLoaded', function() {
      const modal = document.getElementById('pwaModal');
      const closeBtn = document.getElementById('closePwaModal');
      
      // For demo purposes - show modal after 3 seconds
      setTimeout(() => {
        modal.style.display = 'flex';
      }, 3000);
      
      closeBtn.onclick = function() {
        modal.style.display = 'none';
      };
      
      window.onclick = function(event) {
        if (event.target == modal) {
          modal.style.display = 'none';
        }
      };
      
      // Install button handler
      document.getElementById('installBtn').addEventListener('click', function() {
        alert('In a real PWA, this would trigger the installation prompt.');
        modal.style.display = 'none';
      });
      
      // Add subtle hover effects to all action cards
      const cards = document.querySelectorAll('.action-card');
      cards.forEach(card => {
        card.addEventListener('mouseenter', function() {
          this.style.transform = 'translateY(-5px)';
        });
        card.addEventListener('mouseleave', function() {
          this.style.transform = 'translateY(0)';
        });
      });
    });
  </script>
